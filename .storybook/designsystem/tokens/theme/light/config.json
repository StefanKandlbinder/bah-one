{
  "source": [
    ".storybook/designsystem/tokens/theme/light/**/*tokens*.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "keepReferences": true,
      "files": [{
        "destination": "variables.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    }
  }
}
